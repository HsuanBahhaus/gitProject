/* Basic table styling */
table {
    width:100%;
    border-spacing:0;
    border-collapse:collapse;
    position:relative;

}
table,
th,
td {
    border:1px solid #ccc;
}
th,
td {
    padding:6px 8px;
    vertical-align:top;
}
caption,
th {
    font-weight:bold;
    text-align:left;
}
thead th {
    background:#f3f3f3;
    white-space:nowrap;
}

/* Scrollable table styling */
.scrollable{
    /*max-width: 100%;*/
}
.scrollable.has-scroll {
    position:relative;
    overflow-x:hidden; /* Clips the shadow created with the pseudo-element in the next rule. Not necessary for the actual scrolling. */

}
