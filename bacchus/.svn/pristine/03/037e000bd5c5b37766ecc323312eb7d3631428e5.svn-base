    height: auto
.login-img-footer
  margin: 30px 0 20px 0
  img
    width: 200px
    height: auto
.lang
  margin: 20px 20px 0 0

.v_codes
  img
    text-align: center
.errorTip
  color: #ff0000

.light-login
  background: #DFE0E2 url('images/bk_miramar.jpg') no-repeat
  background-size: 100% auto

select.form-control
  padding: 4px 2px
.select-color, select
  color: #CBC0C0
/*-- 下拉式選擇不同館別 --*/
.header-other-choice
  margin: 0 10px 0 10px !important
/*-------- optionSystem.html --------*/
.brand-txt
  color: #eea033
  font-weight: bold
/*-- 圖片 hover 文字 --*/
.system-block-all
  margin: 50px 0 0 0
.system-block
  margin: 0 0 0 30px
  display: inline-block
.imgWrap
  position: relative
  display: inline-block
  margin: 0 15px 0 0
  span.text-content
    background: rgba(0,0,0,0.5)
    color: white
    cursor: pointer
    display: table
    height: 150px
    position: absolute
    left: 0
    top: 0
    width: 150px
    border-radius: 150px
    opacity: 0
  span.text-content span
    display: table-cell
    text-align: center
    vertical-align: middle
  &:hover .text-content
    visibility: visible
    opacity: 1
/*-- /. 圖片 hover 文字 --*/

.opSystem-footer
  padding-top: 220px
.footer-color
  background: #c1e7fe
.footer .footer-inner .footer-content
  padding: 0
.footer-ul,.top-ul,.secondMenu-ul
  ul
    display: inline
    li
      display: inline-block
      list-style: none
      line-height: 30px
.top-ul
  width: 100%
  margin-left: 25px
  ul
    margin-left: 0 !important
    margin-bottom: 10px !important
    width: 100%
    li
    a
      font-size: 16px
      background: #ffbb22
      color: #fff
      padding: 5px 20px
      min-width: 100px
      max-width: 100%
      text-align: center
      display: inline-block
      box-sizing: border-box
      margin-bottom: 5px
      &:hover
        background: #ffc666
    a.active-01
      background: #D15B47
.secondMenu-ul
  margin: 5px 0 10px 25px

  ul
    margin-left: 0 !important
    //margin-bottom: 15px !important
    a
      margin: 0 0 10px 0
      padding: 3px 20px
      min-width: 100px
      max-width: 100%
      text-align: center
      display: inline-block
      box-sizing: border-box
      color: #555
      &:hover
        background: #c6c6c6
        color: #fff
    a.active-01
      background: #888
      color: #fff
  .icon-2-style
    width: 12px
    height: 12px
    margin: 0 10px 3px 0

.copyright
  margin: -15px 0 0 0
.companyInfo
  margin: 10px 0 0 7px
