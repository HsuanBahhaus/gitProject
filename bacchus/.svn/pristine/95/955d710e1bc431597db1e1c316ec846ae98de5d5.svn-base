input{
  color: #858585;
  background-color: #FFF;
  border: 1px solid #D5D5D5;
  font-size: 1em;
  font-family: inherit;
  -webkit-box-shadow: none !important;
  box-shadow: none !important;
  -webkit-transition-duration: 0.1s;
  transition-duration: 0.1s;
}

select {
  -webkit-box-shadow: none !important;
  box-shadow: none !important;
  color: #858585;
  background-color: #FFF;
  border: 1px solid #D5D5D5;
}

.table_bascchus{
	width:100%;
 	border: 1px solid #448CC3;
 	overflow: auto; 

}
.table_bascchus th{
	background-color:#EAF3FB;
	text-align: center; 
}

.table_bascchus td{
	padding-top:2px;
	padding-bottom:10px;
	text-align:center;
}

.browseBtn{
	width:1.5em;
	height:1.5em;
    color: #555555;
    text-align: center;
    padding:0;
}

.right-menu-co{
	text-align:center;

}

.right-menu-co ul{
	padding:0;
	margin-left:0;
}


.right-menu-co ul li{
	list-style: none;
	padding:0;
	margin-top:18px;
}



.right-menu-co ul li a{
	text-decoration: none;
}

.right-menu-co {
	font-size: 0.8em;
}
.right-menu-co-icon{
	width: 40px;
    height:40px;
    border-radius:40px;
    border:1px solid black;
    margin: 0px auto 4px auto;
    box-shadow: 2px 2px 3px rgba(51, 51, 102, 0.5);
    font-size: 1.8em;
    padding-top:3px;
}

.right-menu-co-icon:hover{
    background-color:#2B7DBC;
    border:1px solid #2B7DBC;
    color:#fff;
}


/*Reservation Page*/
.ui-widget{
	font-family:'微軟正黑體';
}


.ui-tabs .ui-tabs-panel{
	padding-top:1%;
	padding-left:1%;
	padding-right:0%;
}

.form-widget{
	border-style:solid; 
	border-color:#C5D0DC; 
	border-width: 1px;
	padding:0;
}



.form-widget-header{
	background-color:#BED2E9;
	border-bottom-style: solid;
	border-bottom-color:#C5D0DC;
	border-bottom-width: 1px; 
	width:100%;
	flood-color:#898F96;
	padding:10px;

}

.form-widget-content{
	padding-bottom:1%;
}

.form-widet-content-notab{
	padding-top:16px;
	padding-left:5px;

}

.form-widget-label{
	width:100%;
}

.nav-tabs.background-blue {
  background-color: #BED2E9 ;
}

.tabs-below .nav-tabs.background-blue {
  padding-top: 0;
  padding-bottom: 0px;
}
.tabs-below .nav-tabs.tab-color-blue {
  border-top: none;
  border-bottom-color: #C5D0DC;
}



.form-control{
	padding:0px;
	height:auto;
	display: inline-block;
}

